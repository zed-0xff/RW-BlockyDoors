<!-- Expanded Woodworking adds _lumber_  -->
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="LumberBirch"]</xpath>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Blocky_Doors_BirchDoor"]/costList</xpath>
          <value>
            <costList>
              <LumberBirch>25</LumberBirch>
            </costList>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

