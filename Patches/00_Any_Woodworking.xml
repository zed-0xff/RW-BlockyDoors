          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Blocky_Doors_DarkOakDoor"]/costList/WoodLog</xpath>
          <value>
            <WoodLog_Oak>25</WoodLog_Oak>
            <Dye>5</Dye>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="WoodLog_Red"]</xpath>
