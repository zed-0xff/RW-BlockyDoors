        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Blocky_Doors_MangroveDoor"]/costList/WoodLog</xpath>
          <value>
            <WoodLog_Red>25</WoodLog_Red>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="WoodLog_Green"]</xpath>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Blocky_Doors_WarpedDoor"]/costList</xpath>
          <value>
            <costList>
              <WoodLog_Green>25</WoodLog_Green>
            </costList>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="WoodLog_Pine"]</xpath>
    <match Class="PatchOperationSequence">
      <success>Always</success>
